<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="at.ac.fh.salzburg.CustomerEntity" table="customer" schema="SmartValDB">
        <id name="customerId" column="customer_id"/>
        <property name="lastname" column="lastname"/>
        <property name="firstname" column="firstname"/>
        <property name="street" column="street"/>
        <property name="postalCode" column="postal_code"/>
        <property name="city" column="city"/>
        <property name="alias" column="alias"/>
        <property name="companyCustomerId" column="company_customer_id"/>
        <property name="signature" column="signature"/>
        <property name="key" column="key"/>
    </class>
</hibernate-mapping>